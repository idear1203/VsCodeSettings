{
    "workbench.colorTheme": "Solarized Dark",

    //-------- Editor configuration --------
    // Controls the font family.
    "editor.fontFamily": "YaHei-Consolas-Hybrid, Consolas, 'Courier New', monospace",

    // Controls the font size in pixels.
    "editor.fontSize": 14,

    // Controls how the editor should render whitespace characters, possibilities are 'none', 'boundary', and 'all'. The 'boundary' option does not render single spaces between words.
    "editor.renderWhitespace": "all",

    // Controls the line height. Use 0 to compute the lineHeight from the fontSize.
    "editor.lineHeight": 24,

    //-------- Vim configuration --------
    // What key should <leader> map to in remappings?
    "vim.leader": ",",

    // Enable the EasyMotion plugin for Vim.
    "vim.easymotion": true,

    // Show all matches of the most recent search pattern
    "vim.hlsearch": true,
    
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,

    // Enable some vim ctrl key commands that override otherwise common operations, like ctrl+c
    "vim.useCtrlKeys": true,

    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before":["<BS>"],
            "after":[],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        {
            "before":["<leader>", "<leader>", "h"],
            "after":["<C-w>", "h"]
        },
        {
            "before":["<leader>", "<leader>", "j"],
            "after":["<C-w>", "j"]
        },
        {
            "before":["<leader>", "<leader>", "k"],
            "after":["<C-w>", "k"]
        },
        {
            "before":["<leader>", "<leader>", "l"],
            "after":["<C-w>", "l"]
        }
    ],

    // Control status bar color based on current mode
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },

    "vim.handleKeys":{
        "<C-a>": false
    },

    "vim.ignorecase" : true,

    // Get rid of that annoying message that shows up everytime you make a new file
    "vim.disableAnnoyingNeovimMessage": true,
    "extensions.ignoreRecommendations": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    }
}